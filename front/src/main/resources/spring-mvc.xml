-->

    <!--
        配置可直接访问WEB-INF下的文件
            path：为要访问的路径
            view-name：要访问的地址（会自动拼接前缀、后缀）
    -->
    <mvc:view-controller path="/mall" view-name="index"/>
    <!--<mvc:view-controller path="/login" view-name="login"/>-->
    <mvc:resources mapping="/static/**" location="static/"/>

</beans>